{
  "manifest_version": 3,
  "name": "Button Highlighter",
  "version": "1.0",
  "description": "Highlights all buttons on the page with a green border.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
